
@{
    ViewBag.Title = "AddSubjects";
    Layout = "~/Views/Shared/_XtremeLayout.cshtml";
}

@section SideBarSection{
    @Html.Partial("_SideBarView")
}

@section HeaderSection{
    @Html.Partial("_HeaderView")
}
<div class="col-12">
   
        <div style="--bs-breadcrumb-divider: '>';">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item fw-normal"><a class="color-primarycolor opacity-50" href="~/OESSubject/index">Subject Management</a></li>
                <li class="breadcrumb-item fw-normal active">Add Subject</li>
            </ol>
        </div>

</div>

    <div class="col-12">
   
        <form action="/services/Xtreme/multipart" method="post" id="frmAddUpdateSubject">
            @*<input type="hidden" name="UserId" id="UserId" value="" />*@
            <input type="hidden" name="SubjectID" id="SubjectID" value="" />
            <input type="hidden" name="type" id="type" value="OES_Add_Subject" />
            <div class="bg-white rounded p-3 p-lg-4 p-xl-5 shadow">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 text-break">
                            <div class="form-group">

                                <label class="form-label required fw600" for="Name">Name</label>
                                <input class="form-control text-box single-line" required id="SubjectName" maxlength="256" name="SubjectName" type="text">

                                <span class="invalid-message field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <a type="button" class="btn form-btn btn-secondary hover-boxshadow me-1" href="~/OESSubject/Index">Back To List</a>
                    <button type="button" id="btnAddSubject" class="btn form-btn btn-primary hover-boxshadow">Save</button>
                </div>
            </div>
        </form>
</div>
    <script src="~/Scripts/OESSubject/OESAddSubject.js"></script>
    @section FooterSection{
        @Html.Partial("_FooterView")
    }

